<%= render 'layouts/_parts/meta_tags', {title: @category.name,
                                        keywords: [ @category.name, "categories"],
                                        description: nil
                                        } %>
<div class="container">
  <div class="row">
    <div class="col-md-offset-0 col-md-4">
      <%= link_to "Home", root_path%> > <%= @category.name %>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-md-offset-0 col-md-3">
      <%= render "categories/_parts/catalog", { categories: @categories} %>
    </div>
    <div class="col-md-offset-0 col-md-9">
      <div>
        <%= render "categories/_parts/category_items", { category: @category, category_items: @items, locale: @locale} %>
      </div>
      <hr>
      <%= paginate @items %>
      <%= page_entries_info @items %>
    </div>
  </div>
</div>
